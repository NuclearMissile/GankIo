<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/gan_item_title"
            style="@style/ListItem.Title"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:text="Test" />

        <TextView
            android:id="@+id/gan_item_who"
            style="@style/ListItem.Source"
            android:layout_below="@id/gan_item_title"
            android:maxLines="1"
            android:text="Test" />

        <TextView
            android:id="@+id/gan_item_time"
            style="@style/ListItem.Time"
            android:layout_alignBaseline="@id/gan_item_who"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:text="Test" />

    </RelativeLayout>

</android.support.v7.widget.CardView>