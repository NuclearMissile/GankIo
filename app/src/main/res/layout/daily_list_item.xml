<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/daily_list_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/daily_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_100"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="2017-10-25" />

        <TextView
            android:id="@+id/daily_list_item_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/md_grey_100"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="# Alibaba 开源 iOS 高性能异构滚动视图构建方案 / 浅谈RxJava与多线程并发" />

    </LinearLayout>

</android.support.v7.widget.CardView>